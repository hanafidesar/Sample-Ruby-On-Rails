
<%= render 'layouts/header'  %>

<div class="container">

<p id="notice"><%= notice %></p>

<h1>Customer Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tcustomerproducts.each do |tcustomerproduct| %>
      <tr>
        <td><%= tcustomerproduct.customer.name %></td>
        <td><%= tcustomerproduct.product.name %></td>
        <td><%= link_to 'Show', tcustomerproduct %></td>
        <td><%= link_to 'Edit', edit_tcustomerproduct_path(tcustomerproduct) %></td>
        <td><%= link_to 'Destroy', tcustomerproduct, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-grey pull-right">
<%= link_to 'Create', new_tcustomerproduct_path %>
</button>

</div>